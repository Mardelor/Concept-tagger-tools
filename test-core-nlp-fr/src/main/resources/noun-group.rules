# make all patterns case-sensitive
ENV.defaultStringMatchFlags = 0
ENV.defaultStringPatternFlags = 0

# these Java classes will be used by the rules
tag = { type: "CLASS", value: "edu.stanford.nlp.ling.CoreAnnotations$PartOfSpeechAnnotation" }
tokens = { type: "CLASS", value: "edu.stanford.nlp.ling.CoreAnnotations$TokensAnnotation" }

# rules
{ ruleType: "tokens", pattern: ([{tag:"VERB"}]), action: Annotate($0, tag, "NOUN"), result: "NOUN" }
{ ruleType: "tokens", pattern: (([{tag:"NOUN"}]) ([{tag:"VERB"}])), action: Annotate($1, tag, "ADJ"), result: "ADJ" }
{ ruleType: "tokens", pattern: (([{tag:"ADJ"}]) ([{tag:"VERB"}])), action: Annotate($1, tag, "NOUN"), result: "NOUN" }
{ ruleType: "tokens", pattern: (([{tag:"VERB"}]) ([{tag:"NOUN"}])), action: Annotate($0, tag, "ADJ"), result: "ADJ" }
{ ruleType: "tokens", pattern: (([{tag:"VERB"}]) ([{tag:"ADJ"}])), action: Annotate($0, tag, "NOUN"), result: "NOUN" }
